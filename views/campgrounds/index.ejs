<%  include ../partials/header %>
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to Campgrounds</h1>
                <p>View all of the campground in the world</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campgrounds</a>
                </p>
            </div>
        </header> 
    
    
        <div class="row text-center" style="display: flex; flex-wrap: wrap;">
            <% campgrounds.forEach(function(campground) { %>
            <div class="col-md-4 col-sm-6">
                <div class="thumbnail">
                        <img src="<%= campground.image %>"></img>
                    <div class="caption">
                       <h4><%= campground.name %> </h4> 
                    </div>
                    <p>
                      <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">view description</a> 
                    </p>
                </div>
            </div>
            <% }); %>
        </div>
   </div>




<% include ../partials/footer %>